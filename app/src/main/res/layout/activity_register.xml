<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_register"
    >

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="358dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/registerform_background" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/registerform_background" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="208dp"
        android:layout_marginTop="108dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/sign_up"
        android:textAlignment="center"
        android:textColor="#181059"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/registerform_background" />

    <EditText
        android:id="@+id/editTextEmailAddress"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="68dp"
        android:background="#FFFFFF"
        android:ems="15"
        android:fontFamily="@font/inter_regular"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="40px"
        android:paddingTop="16px"
        android:paddingRight="216px"
        android:paddingBottom="15px"
        android:shadowRadius="2"
        android:singleLine="false"
        android:textColor="#000000"
        android:textColorHint="#5A5A5A"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="68dp"
        android:background="#FFFFFFF"
        android:ems="15"
        android:fontFamily="@font/inter_regular"
        android:hint="Nama Lengkap"
        android:inputType="textPersonName"
        android:paddingLeft="40px"
        android:paddingTop="16px"
        android:paddingRight="216px"
        android:paddingBottom="15px"
        android:textColor="#000000"
        android:textColorHint="#5A5A5A"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="68dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:fontFamily="@font/inter_regular"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="40px"
        android:paddingTop="16px"
        android:paddingRight="216px"
        android:paddingBottom="15px"
        android:textColor="#000000"
        android:textColorHint="#5A5A5A"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <Button
        android:id="@+id/signupbutton"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="225dp"
        android:backgroundTint="#273568"
        android:fontFamily="@font/inter_bold"
        android:text="Sign Up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView7" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="416dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/signup_google" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="344dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/signup_facebook" />

</androidx.constraintlayout.widget.ConstraintLayout>